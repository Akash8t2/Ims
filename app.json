{
  "name": "IMS-OTP-Forwarder",
  "description": "Fetch OTPs from imssms.org and forward them to a Telegram group automatically.",
  "repository": "https://github.com/akashkashyap/ims-otp-forwarder",
  "keywords": ["otp", "telegram", "ims", "scraper", "heroku", "forwarder"],
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot token from @BotFather",
      "required": true
    },
    "CHAT_ID": {
      "description": "Telegram chat/group ID where OTPs will be sent",
      "value": "-1003140739791"
    },
    "IMS_URL": {
      "description": "IMS SMS Dashboard URL",
      "value": "https://imssms.org/client/SMSDashboard"
    },
    "IMS_USER": {
      "description": "IMS login username",
      "required": true
    },
    "IMS_PASS": {
      "description": "IMS login password",
      "required": true
    },
    "MONGO_URI": {
      "description": "MongoDB connection string for deduplication and logs",
      "value": "mongodb+srv://BrandedSupportGroup:BRANDED_WORLD@cluster0.v4odcq9.mongodb.net/?retryWrites=true&w=majority"
    },
    "FETCH_INTERVAL": {
      "description": "Seconds between SMS fetches (recommended 10â€“30)",
      "value": "15"
    },
    "ADMIN_ID": {
      "description": "Telegram user ID of the admin (for control commands)",
      "required": false
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "Basic"
    }
  },
  "buildpacks": [
    { "url": "heroku/python" }
  ]
}

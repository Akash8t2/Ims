{
  "name": "OTP Sentinel",
  "description": "üõ°Ô∏è Your Guardian for Verification Codes - Forward OTP messages from IMS SMS to Telegram",
  "repository": "https://github.com/your-username/otp-sentinel",
  "logo": "https://raw.githubusercontent.com/your-username/otp-sentinel/main/assets/logo.png",
  "keywords": [
    "python",
    "telegram",
    "bot",
    "otp",
    "sms",
    "verification",
    "security",
    "automation"
  ],
  "website": "https://t.me/OTPSentinelBot",
  "env": {
    "IMSSMS_BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "IMSSMS_CHAT_IDS": {
      "description": "Comma separated list of Telegram Chat IDs to receive OTPs",
      "required": true
    },
    "MANUAL_SESSION": {
      "description": "PHPSESSID cookie from IMS SMS website (get from browser after login)",
      "required": true
    },
    "BASE_URL": {
      "description": "IMS SMS base URL",
      "value": "https://imssms.org",
      "required": false
    },
    "POLL_INTERVAL": {
      "description": "How often to check for new OTPs (in seconds)",
      "value": "15",
      "required": false
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "Basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "addons": [
    {
      "plan": "heroku-redis:mini"
    }
  ]
}

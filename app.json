{
  "name": "OTP Telegram Bot",
  "description": "Telegram OTP bot with MongoDB, admin system, number upload via TXT, and live OTP forwarding to user and groups.",
  "repository": "https://github.com/yourusername/otp-telegram-bot",
  "keywords": [
    "telegram",
    "otp",
    "bot",
    "mongodb",
    "heroku"
  ],
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot Token",
      "required": true
    },
    "OWNER_ID": {
      "description": "Telegram User ID of Bot Owner",
      "required": true
    },
    "MONGO_DB_URI": {
      "description": "MongoDB Atlas SRV Connection String",
      "required": true
    },
    "PHPSESSID": {
      "description": "PHPSESSID cookie for INTS panel",
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "Basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}

{
  "name": "ims-otp-forwarder",
  "description": "Termux/Heroku-ready IMS OTP forwarder (Telegram bot + dedupe + live polling).",
  "repository": "https://github.com/Akash8t2/ims",
  "keywords": ["python", "otp", "telegram", "heroku", "forwarder"],
  "stack": "heroku-22",
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram bot token from BotFather",
      "value": ""
    },
    "CHAT_IDS": {
      "description": "Comma-separated chat IDs where OTPs should be forwarded",
      "value": "-1003072064847"
    },
    "ADMIN_CHAT_IDS": {
      "description": "Optional admin chat IDs (comma separated)",
      "value": ""
    },
    "USERNAME": {
      "description": "IMS panel username",
      "value": ""
    },
    "PASSWORD": {
      "description": "IMS panel password",
      "value": ""
    },
    "SITE_BASE": {
      "description": "Base URL of the IMS site (default http://45.82.67.20)",
      "value": "http://45.82.67.20"
    },
    "COOKIES": {
      "description": "Optional injected cookies, e.g. PHPSESSID=xxxx",
      "value": ""
    },
    "POLL_INTERVAL": {
      "description": "Polling interval in seconds (default 1)",
      "value": "1"
    },
    "FORWARD_IF_NO_CODE": {
      "description": "Forward SMS even if no OTP code found (true/false)",
      "value": "true"
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "Basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}

{
  "name": "otp-forwarder-bot",
  "description": "OTP Forwarder Bot - Fetch OTP from website and send to Telegram",
  "repository": "https://github.com/your-repo/otp-forwarder-bot",
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram Bot API Token from @BotFather",
      "required": true
    },
    "CHAT_ID": {
      "description": "Telegram Chat ID (can be group or user ID)",
      "required": true
    },
    "LOGIN_URL": {
      "description": "Website login URL",
      "value": "http://45.82.67.20/ints/"
    },
    "USERNAME": {
      "description": "Website username",
      "required": true
    },
    "PASSWORD": {
      "description": "Website password",
      "required": true
    },
    "SMS_URL": {
      "description": "Website SMS Dashboard URL",
      "value": "http://45.82.67.20/ints/agent/SMSCDRStats"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}

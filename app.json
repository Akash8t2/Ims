{
  "name": "OTP Forwarder with MongoDB (No Duplicates)",
  "description": "Auto-forward OTP messages from IMS site to Telegram with MongoDB deduplication and restart-safe cache.",
  "repository": "https://github.com/your-repo-name/otp-forwarder",
  "logo": "https://i.ibb.co/6XvnYtM/otpbot.png",
  "keywords": ["telegram", "otp", "heroku", "bot", "mongo"],
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "CHAT_IDS": {
      "description": "Comma-separated list of chat/group IDs where OTPs should be sent (e.g. -1001234567890,123456789)",
      "required": true
    },
    "USERNAME": {
      "description": "IMS panel login username",
      "required": true
    },
    "PASSWORD": {
      "description": "IMS panel login password",
      "required": true
    },
    "SITE_BASE": {
      "description": "Base site URL (default: http://45.82.67.20)",
      "required": false,
      "value": "http://45.82.67.20"
    },
    "MONGO_URI": {
      "description": "MongoDB connection URI (optional, for deduplication persistence)",
      "required": false
    },
    "POLL_INTERVAL": {
      "description": "Polling interval in seconds (default: 2)",
      "required": false,
      "value": "2"
    },
    "REQUEST_TIMEOUT": {
      "description": "Request timeout in seconds (default: 15)",
      "required": false,
      "value": "15"
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "Basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "scripts": {
    "postdeploy": "echo 'âœ… Deployment complete. Your OTP Forwarder bot is now running.'"
  }
}
